# top-most EditorConfig file
root = true

[*]
trim_trailing_whitespace = true
indent_size = 4

[*.go]
indent_style = space

[*.js]
indent_size = 2

[*.{json,jsonnet,libsonnet}]
insert_final_newline = true
indent_size = 2

[*.tf]
indent_size = 2

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.css]
indent_size = 2
