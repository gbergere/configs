###
# ~/.slate
##

alias hyper alt;cmd

config defaultToCurrentScreen true
config nudgePercentOf screenSize
config resizePercentOf screenSize

# Window Hints
bind i:${hyper}      hint

# Shortcuts Bindinge
bind u:${hyper}       undo
bind space:${hyper}   move     screenOriginX+screenSizeX/6;screenOriginY+screenSizeY/8 screenSizeX/6*4;screenSizeY/8*6
bind f:${hyper}       move     screenOriginX;screenOriginY screenSizeX;screenSizeY
bind e:${hyper}       relaunch

# Push Bindings
bind d:${hyper}    push    left  bar-resize:screenSizeX/2
bind g:${hyper}    push    right bar-resize:screenSizeX/2

# Corner Bindings
bind r:${hyper}   corner  top-left      resize:screenSizeX/2;screenSizeY/2
bind t:${hyper}   corner  top-right     resize:screenSizeX/2;screenSizeY/2
bind c:${hyper}   corner  bottom-left   resize:screenSizeX/2;screenSizeY/2
bind v:${hyper}   corner  bottom-right  resize:screenSizeX/2;screenSizeY/2
bind 4:${hyper}   move    screenOriginX+screenSizeX/2;screenOriginY screenSizeX/4;screenSizeY/2 
bind 5:${hyper}   corner  top-right     resize:screenSizeX/4;screenSizeY/2

# Resize Bindings
bind =:${hyper}        resize +10% +0
bind -:${hyper}        resize -10% +0
bind =:${hyper};shift  resize +0   +10%
bind -:${hyper};shift  resize +0   -10%

# Nudge Bindings
bind ]:${hyper}        nudge +10% +0
bind [:${hyper}        nudge -10% +0
bind ]:${hyper};shift  nudge +0   +10%
bind [:${hyper};shift  nudge +0   -10%


# Throw Bindings
bind 1:${hyper}    throw 0
bind 2:${hyper}    throw 1
bind 3:${hyper}    throw 2
bind [:${hyper}    throw previous
bind ]:${hyper}    throw next

# Focus Bindings
bind h:${hyper}   focus left
bind j:${hyper}   focus below
bind k:${hyper}   focus up
bind l:${hyper}   focus right

###
#App Shortcuts
##
bind 6:${hyper} focus 'Safari'
bind 7:${hyper} focus 'Slack'
bind 8:${hyper} focus 'Mail'
bind 9:${hyper} focus 'Google Chrome'
bind 0:${hyper} focus 'Terminal'

###
# Layouts
##

# Desktop
layout desktop 'Mail'      push left bar-resize:screenSizeX/2 1
layout desktop 'Messages'  move screenOriginX+screenSizeX/2;screenOriginY screenSizeX/4;screenSizeY/2 1
layout desktop 'WhatsApp'  corner  top-right     resize:screenSizeX/4;screenSizeY/2 1
layout desktop 'Trello'    corner  bottom-right  resize:screenSizeX/2;screenSizeY/2 1 
default desktop resolutions:3200x1800;3200x1800
